<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-light border-end p-3" style="min-width:250px;">
            <h4 class="fw-bold">CMCS</h4>
            <nav class="nav flex-column">
                <a class="nav-link" href="/">🏠 Dashboard</a>
                <a class="nav-link" href="/Claims/Submit">📝 Submit Claim</a>
                <a class="nav-link" href="/Claims/History">📊 View Claims</a>
                <a class="nav-link" href="/Documents/Upload">📎 Upload Docs</a>
                <a class="nav-link text-danger" href="/Account/Login">⇦ Logout</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1">
            <header class="border-bottom bg-white p-3">
                <h5 class="mb-0">Contract Monthly Claim System</h5>
                <small class="text-muted">Independent Contractor Lecturers</small>
            </header>
            <div class="p-4">
                @RenderBody()
            </div>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
